{
  "name": "@venkatesh/danger-plugin-eslint",
  "description": "Eslint your code with Danger",
  "author": {
    "name": "Venkatesh Reddy",
    "email": "venkatesh.reddy5353@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/venkateshreddy5353/danger-plugin-eslint.git"
  },
  "bugs": {
    "url": "https://github.com/venkateshreddy5353/danger-plugin-eslint/issues"
  },
  "homepage": "https://github.com/venkateshreddy5353/danger-plugin-eslint#readme",
  "keywords": [
    "danger",
    "danger-plugin",
    "eslint"
  ],
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "precommit": "lint-staged",
    "commit": "git-cz",
    "commitmsg": "validate-commit-msg",
    "build": "tsc",
    "test": "jest",
    "predocs": "rm -rf docs/",
    "docs": "esdoc -c .esdoc.json",
    "prepublishOnly": "npm run build",
    "semantic-release": "semantic-release",
    "prettier": "prettier",
    "prettier-write": "npm run prettier -- --parser typescript --no-semi --trailing-comma es5 --write --print-width 120",
    "prettier-project": "npm run prettier-write -- 'src/**/*.{ts,tsx}'",
    "lint": "tslint \"src/**/*.ts\""
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/jest": "^27.0.2",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "danger": "^10.2.1",
    "esdoc": "^1.1.0",
    "eslint": "^8.0.1",
    "husky": "^7.0.0",
    "jest": "^27.3.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.0.5",
    "semantic-release": "^17.1.1",
    "ts-jest": "^27.0.7",
    "tslint": "^6.1.2",
    "typescript": "^4.0.3",
    "validate-commit-msg": "^2.12.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "tslint --fix",
      "npm run prettier-write --"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      ".(ts|tsx|js|json)": "ts-jest"
    },
    "testRegex": "(.test)\\.(ts|tsx)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/"
    ]
  },
  "peerDependencies": {
    "eslint": ">=8"
  },
  "husky": {
    "hooks": {
      "commit-msg": "validate-commit-msg",
      "pre-commit": "lint-staged"
    }
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ],
    "preset": "angular"
  }
}
